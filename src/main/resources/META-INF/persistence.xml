<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
<persistence-unit name="default">   
        <class>daos.Acceso</class>
        <class>daos.Usuario</class>
        <class>daos.Autores</class>
        <class>daos.Colecciones</class>
        <class>daos.Editoriales</class>
        <class>daos.EstadosPrestamos</class>
        <class>daos.Generos</class>
        <class>daos.Libros</class>
        <class>daos.Prestamos</class>
        <class>daos.Usuario</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestorBibliotecaPersonal"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="Admin"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>

</persistence>